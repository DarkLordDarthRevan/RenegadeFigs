<%= form_with model: @renegadefigs do |form| %>
  <div>
    <%= form.label :productName %><br>
    <%= form.text_field :productName %>
    <% @renegadefigs.errors.full_messages_for(:productName).each do |message| %>
      <div><%= message %></div>
    <%end%>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    <% @renegadefigs.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <%end%>
  </div>
  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :stock %><br>
    <%= form.text_field :stock %>
  </div>
  <div>
    <%= form.label :category %><br>
    <%= form.text_field :category %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<%end%>